<?xml version="1.0" encoding="utf-8"?>
<project>
	<!-- NMML reference: https://gist.github.com/1763850 -->
	
	<!-- metadata, make sure 'package' is at least 3 segments (ie. com.mycompany.myproject) -->
	<meta title="OpenFLStarlingSamples" package="starling.samples" version="1.0.0" company="P.J.Shand" />
	
	<!-- output -->
	<app main="sample.Main" file="OpenFLStarlingSamples" path="bin" />
	
	<window background="#000000" fps="60" />
	<window width="800" height="480" unless="mobile" />
	<window orientation="landscape" vsync="false" antialiasing="0" if="cpp" />
	
	<!-- classpath, haxe libs -->
	<source path="src" />
	<source path="../starling/src" />
	<haxelib name="openfl" />
	<haxelib name="actuate" />
	<haxelib name="air3" />
	
	<!-- assets -->
	<!--<icon path="assets/openfl.svg" />-->
	<assets path="assets/textures" rename="textures" />
	<assets path="assets/audio" rename="audio" />
	<assets path="assets/fonts" rename="fonts" />
	
	<app swf-version="17"/>
	<haxeflag name="-D air" if="flash" ></haxeflag>
	<!-- optimize output
	<haxeflag name="-dce full" /> -->
	
</project>